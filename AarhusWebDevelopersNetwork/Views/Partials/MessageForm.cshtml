@model AarhusWebDevelopersNetwork.Models.ViewModels.MessageBoardViewModel
@{
    Layout = null;
}
<link href="~/Content/validationStyle.css" rel="stylesheet" type="text/css" />
<body>
    <div class="row">

            @using (Html.BeginUmbracoForm("CreateMessage", "MessageBoardSurFace", new object { },
                new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Message, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.Message, new { @class = "form-control", placeholder = "The message" })
                </div>
                @if (TempData["TempMsgBoardError"] != null) {
                <div class="arrow_box col-sm-3">
                    @Html.Raw(TempData["TempMsgBoardError"])
                </div>
                }
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-6">
                    <button id="contact-submit" type="submit" class="cusBtn cusBtn-primary input-medium-pull-left">Send</button>
                </div>
            </div>
        </div>
            }
        

    </div>
</body>
